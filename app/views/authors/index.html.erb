<h1>Listing Authors</h1>

<table>

<% @authors.each do |author| %>
  <tr>
    <p><td><b>Username:</b> <%= author.username %></td></p>
  </tr>
  <tr>
    <p><td><b>Email:</b> <%= author.email %></td></p>
  </tr>
    <tr><td><%= link_to 'Show', author %></td></tr>
    <tr><td><%= link_to 'Edit', edit_author_path(author) %></td></tr>
    <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  
<% end %>
</table>

<br />

<%= link_to 'New Author', new_author_path %>
